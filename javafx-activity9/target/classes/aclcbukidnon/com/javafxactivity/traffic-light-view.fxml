<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="443.0" prefWidth="702.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aclcbukidnon.com.javafxactivity.controllers.TrafficLightController">

   <!-- Traffic Light Circles -->
   <HBox alignment="CENTER" spacing="20">
      <Circle fx:id="redLight" fill="GRAY" radius="100.0" stroke="BLACK" strokeType="INSIDE" />
      <Circle fx:id="yellowLight" fill="GRAY" radius="100.0" stroke="BLACK" strokeType="INSIDE" />
      <Circle fx:id="greenLight" fill="GRAY" radius="100.0" stroke="BLACK" strokeType="INSIDE" />
   </HBox>

   <!-- Control Buttons -->
   <HBox alignment="CENTER" spacing="10">
      <Button fx:id="btnStop" style="-fx-base: #ff4444; -fx-font-weight: bold; -fx-padding: 10 20;" text="Force STOP" />
      <Button fx:id="btnHold" style="-fx-base: #ffff44; -fx-font-weight: bold; -fx-padding: 10 20;" text="Force HOLD" />
      <Button fx:id="btnGo" style="-fx-base: #44ff44; -fx-font-weight: bold; -fx-padding: 10 20;" text="Force GO" />
      <Button fx:id="btnEmergency" style="-fx-base: #ff0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="🚨 EMERGENCY" />
      <Button fx:id="btnWarning" style="-fx-base: #ffaa00; -fx-font-weight: bold; -fx-padding: 10 20;" text="⚠️ WARNING" />
   </HBox>

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
